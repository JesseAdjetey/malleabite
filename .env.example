# Firebase Configuration
# Get these values from your Firebase Console: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Keys
# Get Gemini API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Stripe Configuration (for payments and subscriptions)
# Get from: https://dashboard.stripe.com/apikeys
# Use TEST keys for development, LIVE keys for production
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Product & Price IDs
# Create these in Stripe Dashboard > Products
VITE_STRIPE_PRO_PRODUCT_ID=prod_your_pro_product_id
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_your_pro_monthly_price_id
VITE_STRIPE_PRO_ANNUAL_PRICE_ID=price_your_pro_annual_price_id
VITE_STRIPE_TEAMS_PRODUCT_ID=prod_your_teams_product_id
VITE_STRIPE_TEAMS_MONTHLY_PRICE_ID=price_your_teams_monthly_price_id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI=true
VITE_ENABLE_DEBUG_LOGS=false

# Environment
VITE_ENVIRONMENT=development

# Error Tracking (Optional - for production)
# Get from: https://sentry.io - Create a new React project
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# App Configuration
VITE_APP_NAME=Malleabite
VITE_APP_URL=http://localhost:8080
VITE_APP_VERSION=1.0.0

# ============================================
# Phase 6: Advanced Integrations
# ============================================

# SendGrid Email Service (for email notifications)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=notifications@yourdomain.com

# Google Calendar Integration
# Get from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID (Web application type)
# 2. Add authorized JavaScript origins (localhost:8080 for dev, your domain for prod)
VITE_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com

# Slack Notifications (configured per-user in Settings)
# Users will add their own webhook URLs via Settings > Integrations
# Create webhooks at: https://api.slack.com/apps â†’ Incoming Webhooks
